{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@model/*": ["./src/model/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"]
    }
  }
}
